{
  "name": "@howmuch/api",
  "version": "0.0.1",
  "description": "",
  "engines": {
    "node": "14"
  },
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "yarn start:dev",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "migrations:create": "ts-node ./node_modules/.bin/typeorm migration:create -n",
    "migrations:run": "ts-node ./node_modules/.bin/typeorm migration:run",
    "migrations:revert": "ts-node ./node_modules/.bin/typeorm migration:revert",
    "seed:create": "ts-node ./node_modules/.bin/typeorm migration:create -c seed -n",
    "seed:run": "ts-node ./node_modules/.bin/typeorm migration:run -c seed",
    "seed:revert": "ts-node ./node_modules/.bin/typeorm migration:revert -c seed",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "precommit": "npx tsc --noEmit && yarn lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@babel/preset-env": "^7.17.12",
    "@nestjs/axios": "^0.0.7",
    "@nestjs/common": "^8.3.0",
    "@nestjs/config": "^1.2.0",
    "@nestjs/core": "^8.3.0",
    "@nestjs/event-emitter": "^1.0.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/schedule": "^1.0.2",
    "@nestjs/typeorm": "^8.0.2",
    "@sendgrid/client": "^7.6.1",
    "@sendgrid/mail": "^7.6.1",
    "@sentry/node": "^6.19.6",
    "@sentry/tracing": "^6.19.6",
    "axios": "^0.26.0",
    "bcrypt": "^5.0.1",
    "bull": "^4.5.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.1",
    "date-fns": "^2.28.0",
    "express-basic-auth": "^1.2.1",
    "node-notifier": "^10.0.1",
    "node-object-hash": "^2.3.10",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.2.37"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.17.12",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/bull": "^3.15.8",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^17.0.18",
    "@types/node-notifier": "^8.0.2",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "volta": {
    "node": "14.19.1"
  }
}
